{
  "compilerOptions": {
    "target": "ES2021",                                 
    "experimentalDecorators": true,                 
    "emitDecoratorMetadata": true,                    
    "module": "commonjs",                           
     "baseUrl": "./src",                                
     "paths": {
      "@modules/*":["modules/*"],
      "@config/*":["config/*"],
      "@shared/*":["shared/*"],
      "@errors/*":["errors/*"],
      "@utils/*": ["utils/*"]
     },                             
    "resolveJsonModule": true,                     
     "outDir": "./dist",                             
    "esModuleInterop": true,                                             
    "forceConsistentCasingInFileNames": true,         
     "strictNullChecks": true,                       
    "skipLibCheck": true                            
  }
}
